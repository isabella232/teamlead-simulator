{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "outDir": "../dist",
    "alwaysStrict": true,
    "strict": true,
    "sourceMap": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "../codegen/src/meta.ts"
      }
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
